= form_for [@website, @search] do |f|
  -if @search.errors.any?
    #error_explanation
      %h2= "#{pluralize(@search.errors.count, "error")} prohibited this search from being saved:"
      %ul
        - @search.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Website:"
    = @website.base_url
  .field
    = f.label "Search terms (separated by space)"
    = text_field_tag :search_terms
  .actions
    = f.submit 'Save'
