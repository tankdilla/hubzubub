= form_for website_params_path(@website, @website_param) do |f|
  -if @website_param.errors.any?
    #error_explanation
      %h2= "#{pluralize(@website_param.errors.count, "error")} prohibited this website_param from being saved:"
      %ul
        - @website_param.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Field Name:"
    = text_field_tag :field_name
  .field
    = f.label "Description:"
    = text_field_tag :description
  .field
    = f.label "Value:"
    = text_field_tag :field_value
  .actions
    = f.submit 'Save'
