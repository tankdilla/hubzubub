= form_for @website_param, :url=>path_var do |f|
  -if @website_param.errors.any?
    #error_explanation
      %h2= "#{pluralize(@website_param.errors.count, "error")} prohibited this website_param from being saved:"
      %ul
        - @website_param.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Name:"
    = f.text_field :name
  .field
    = f.label "Description:"
    = f.text_field :description
  .field
    = f.label "Field Name:"
    = f.text_field :field_name
  .field
    = f.label "Value:"
    = f.text_field :field_value
  .actions
    = f.submit 'Save'
